.filter-bar-span,.filter-bar{
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
}
.filter-bar-span{
  padding-bottom: 8rpx;
}
.filter-bar{
  display: flex;
  position: fixed;
  top: 70rpx;
  background: var(--color-foreground);
  border-top: 5rpx solid var(--color-background);
  font-size: 28rpx;
  font-weight: bold;
}
.filter-bar view{
  flex: auto;
  position: relative;
}
.filter-bar view.selected{
  color:var(--color-text-selected);
}
.filter-bar view.icon-order:after,.filter-bar view.icon-filter:after{
  content: '';
  display: inline-block;
  margin-left: 7rpx;
  width: 16rpx;
  height: 20rpx;
  background: var(--icon-order) no-repeat left center;
  background-size: cover;
}
.filter-bar view.icon-filter:after{
  background-image: var(--icon-filter);
}
.filter-bar view.icon-order.icon-up:after{
  background-position: center;
}
.filter-bar view.icon-order.icon-down:after{
  background-position: right center;
}