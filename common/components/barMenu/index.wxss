.menu, .menu-span{
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
}
.menu-span{
  padding-bottom: 5rpx;
}
.menu {
  display: flex;
  position: fixed;
  left: 0;
  top: 0;
  font-size: 34rpx;
  font-weight: bold;
  background: var(--color-foreground);
  z-index: 10;
}
.menu view{
  flex: auto;
  position: relative;
}
.menu view.selected{
  color:var(--color-text-selected);
}
.menu view.selected:before{
  content: '';
  position: absolute;
  left: 24%;
  bottom: 0;
  height: 5rpx;
  width: 52%;
  background: var(--color-text-selected);
}